<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/monetka"

        tools:context="com.iomis.headsortails.MainActivity">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
    >


        <Button
                android:text="Flip"
                android:layout_width="120dp"
                android:layout_height="100dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/Start"
                android:textStyle="bold" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" android:fontFamily="serif"/>
        <TextView
                android:text="Heads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="80dp" android:layout_marginStart="15dp" android:layout_marginTop="10dp"
                android:id="@+id/textView3" android:textAllCaps="true"
                android:textSize="18sp" android:fontFamily="serif" android:textStyle="bold"
                android:typeface="sans" android:textColor="@android:color/white"/>
        <TextView
                android:text="  OR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="80dp" android:layout_marginStart="15dp" android:layout_marginTop="22dp"
                android:id="@+id/textView5" android:textAllCaps="true"
                android:textSize="18sp" android:fontFamily="serif" android:textStyle="bold"
                android:typeface="sans" android:textColor="@android:color/black"/>
        <TextView
                android:text="Tails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="80dp" android:layout_marginStart="6dp" android:layout_marginTop="33dp"
                android:id="@+id/textView6" android:textAllCaps="true"
                android:textSize="18sp" android:fontFamily="serif" android:textStyle="bold"
                android:typeface="sans" android:textColor="@android:color/white"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
