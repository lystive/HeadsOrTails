<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iomis.headsortails.Final">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
    >


        <Button
                android:text="Menu"
                android:layout_width="70dp"

                android:layout_height="40dp" android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:layout_marginRight="24dp" android:layout_marginEnd="24dp" android:layout_marginBottom="20dp"
                android:id="@+id/menu" android:textStyle="bold"/>
        <Button
                android:text="Reset"
                android:layout_width="70dp"

                android:layout_height="40dp" android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:layout_marginRight="24dp" android:layout_marginEnd="500dp" android:layout_marginBottom="20dp"
                android:id="@+id/Reset" android:textStyle="bold"/>
        <TextView
                android:text="Heads : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="80dp" android:layout_marginStart="15dp" android:layout_marginTop="10dp"
                android:id="@+id/HeadsCount" android:textAllCaps="true"
                android:textSize="16sp" android:fontFamily="serif" android:textStyle="bold"
                android:typeface="sans" android:textColor="@android:color/black"/>
        <TextView
                android:text="Tails : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="80dp" android:layout_marginStart="486dp" android:layout_marginTop="10dp"
                android:id="@+id/TailsCount" android:textAllCaps="true"
                android:textSize="16sp" android:fontFamily="serif" android:textStyle="bold"
                android:typeface="sans" android:textColor="@android:color/black"/>
        <TextView
                android:text="To flip again, click on the coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignBottom="@+id/menu"
                android:layout_centerHorizontal="true" android:id="@+id/textView4"/>
        <Button

                android:layout_width="180dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="180dp" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" android:id="@+id/Flip"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
